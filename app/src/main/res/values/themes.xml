<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SiSosmed" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nice_blue_100</item>
        <item name="colorPrimaryVariant">@color/nice_blue_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>

    <style name="Theme.SiSosmed.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SiSosmed.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SiSosmed.ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">@dimen/value_12sp</item>
    </style>

    <style name="Theme.SiSosmed.TextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="Theme.SiSosmed.TextInputEditText">
        <item name="android:longClickable">false</item>
        <item name="android:textSize">@dimen/value_16sp</item>
        <item name="android:padding">@dimen/value_10dp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_rounded</item>
    </style>

    <style name="RoundedShape.Detail" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/value_16dp</item>
        <item name="cornerSizeBottomRight">@dimen/value_16dp</item>
    </style>
</resources>